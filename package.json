{
  "name": "cred30",
  "private": true,
  "version": "1.0.33",
  "description": "Plataforma Fintech Cred30 - Monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend-v2 && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend-v2 && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd packages/backend && npm test",
    "test:frontend": "cd packages/frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd packages/backend && npm run lint",
    "lint:frontend": "cd packages/frontend && npm run lint",
    "format": "prettier --write \"packages/**/*.{js,ts,tsx,json,css,md}\"",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd packages/backend && rm -rf dist",
    "clean:frontend": "cd packages/frontend-v2 && rm -rf dist",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:dev": "docker-compose -f docker/docker-compose.dev.yml up",
    "migrate:db": "cd packages/backend && npm run migrate:db",
    "seed:db": "cd packages/backend && npm run seed:db",
    "reset:db": "cd packages/backend && npm run reset:db",
    "bump": "npm version patch --no-git-tag-version && cd packages/backend && npm version patch --no-git-tag-version && cd ../frontend-v2 && npm version patch --no-git-tag-version",
    "deploy": "git add . && git commit -m \"chore: update version and deploy\" && git push origin master && npm run build:frontend && firebase deploy --only hosting",
    "release": "npm run bump && npm run deploy"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "postgres": "^3.4.7"
  }
}
